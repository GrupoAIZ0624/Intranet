    <script>
        function toggleGalleryRH() {
            var gallery = document.getElementById("imageGalleryRH");
            gallery.classList.toggle("show");
        }

        function toggleGalleryTECNOLOGIA() {
            var gallery = document.getElementById("imageGalleryTECNOLOGIA");
            gallery.classList.toggle("show");
        }

        function toggleGalleryMARKETING() {
            var gallery = document.getElementById("imageGalleryMARKETING");
            gallery.classList.toggle("show");
        }
        
        function openModal(image) {
            var modal = document.getElementById("myModal");
            var modalImg = document.getElementById("modalImg");
            modal.style.display = "block";
            modalImg.src = image.src;
        }

        function closeModal() {
            var modal = document.getElementById("myModal");
            modal.style.display = "none";
        }
    </script>
